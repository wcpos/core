{
	"title": "WP Credentials schema",
	"version": 0,
	"description": "WordPress credentials",
	"type": "object",
	"primaryKey": "localID",
	"required": ["localID"],
	"properties": {
		"localID": {
			"description": "Unique local identifier for the resource.",
			"type": "string"
		},
		"id": {
			"type": "number"
		},
		"username": {
			"type": "string"
		},
		"firstName": {
			"type": "string"
		},
		"lastName": {
			"type": "string"
		},
		"email": {
			"type": "string"
		},
		"displayName": {
			"type": "string"
		},
		"niceName": {
			"type": "string"
		},
		"lastAccess": {
			"type": "string"
		},
		"consumerKey": {
			"type": "string"
		},
		"consumerSecret": {
			"type": "string"
		},
		"jwt": {
			"type": "string"
		},
		"wpNonce": {
			"type": "string"
		},
		"keyId": {
			"type": "number"
		},
		"keyPermissions": {
			"type": "string"
		},
		"stores": {
			"type": "array",
			"ref": "stores",
			"items": {
				"type": "string"
			}
		}
	},
	"enrypted": ["consumerSecret", "jwt"]
}
