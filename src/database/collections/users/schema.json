{
	"title": "User schema",
	"version": 0,
	"description": "Global app user - different to WordPress user",
	"type": "object",
	"primaryKey": "localId",
	"required": ["localId"],
	"properties": {
		"localId": {
			"description": "Unique local identifier for the resource.",
			"type": "string"
		},
		"firstName": {
			"type": "string"
		},
		"lastName": {
			"type": "string"
		},
		"displayName": {
			"type": "string"
		},
		"sites": {
			"type": "array",
			"ref": "sites",
			"items": {
				"type": "string"
			}
		}
	}
}
